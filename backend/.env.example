PORT=3001
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
# 若使用新 API 版本，可設定為 v1
# GEMINI_API_VERSION=v1
# 調整模型回覆的字數上限（token 數量，建議至少 256，未設定則為 512）
GEMINI_MAX_OUTPUT_TOKENS=256
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/service-account.json
# 或者直接貼上 JSON 內容：
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account",...}

# 允許前端的來源（多個以逗號分隔）
CORS_ORIGINS=http://localhost:3000

# Yating TTS API 設定（https://tts.api.yating.tw）
TTS_API_KEY=
# 以下為選填，覆寫預設值
# TTS_API_HOST=https://tts.api.yating.tw
# TTS_VOICE_MODEL=zh_en_female_1
# TTS_AUDIO_ENCODING=LINEAR16
# TTS_AUDIO_SAMPLE_RATE=22K

# 以下為選填，覆寫預設語音辨識設定
# STT_LANGUAGE_CODE=zh-TW
# STT_ENCODING=WEBM_OPUS
# STT_SAMPLE_RATE=24000
# STT_MODEL=default
